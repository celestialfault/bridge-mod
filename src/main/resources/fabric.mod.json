{
  "schemaVersion": 1,
  "id": "sweatbridge",
  "version": "${version}",
  "name": "Sweat Bridge",
  "description": "In-game Discord chat bridge",
  "authors": ["celeste"],
  "contact": {
    "sources": "https://github.com/celestialfault/bridge-mod",
    "issues": "https://github.com/celestialfault/bridge-mod/issues"
  },
  "license": "CC0-1.0",
  "environment": "client",
  "entrypoints": {
    "client": [
      {
        "value": "me.celestialfault.sweatbridge.SweatBridge",
        "adapter": "kotlin"
      }
    ],
    "modmenu": [
      {
        "value": "me.celestialfault.sweatbridge.ModMenuImpl",
        "adapter": "kotlin"
      }
    ]
  },
  "mixins": ["sweatbridge.mixin.json"],
  "depends": {
    "java": ">=17",
    "fabricloader": "*",
    "fabric-language-kotlin": ">=1.9.23",
    "minecraft": "~1.20",
    "fabric-command-api-v2": "*",
    "fabric-networking-api-v1": "*"
  },
  "recommends": {
    "yet_another_config_lib_v3": "*",
    "modmenu": "*"
  }
}
